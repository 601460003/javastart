<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhangzhiwie.demo.dao.PersonDao">

    <select id="getList" resultType="com.zhangzhiwie.demo.entity.Person">
        select * from person
    </select>
    <select id="getListByParams" resultType="com.zhangzhiwie.demo.entity.Person">
        select * from person
        <where>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="age != null and age != ''">
                and age = #{age}
            </if>
        </where>
    </select>

    <insert id="addPerson" >
        insert into person (
        <if test="name != null and name != ''">
        name,
        </if>
        age,
        sex
        )
        values(
        <if test="name != null and name != ''">
        #{name},
        </if>
        #{age},
        #{sex}
        )
    </insert>
    <!--    修改xml语句-->
    <update id="updatePerson">
        update person
        <set>
            <if test="name != null and name !=''">name=#{name},</if>
            <if test="age != null and age !=''">age=#{age},</if>
            <if test="sex != null and sex !=''">sex=#{sex},</if>
        </set>
        where id=#{id}
    </update>
    <!--    删除xml语句-->
    <delete id="deletePerson">
        delete from person where id=#{id}
    </delete>
</mapper>


